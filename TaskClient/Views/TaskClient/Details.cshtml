@model TaskClient.Models.TaskViewModel

<div class=" card text-primary">
    <div class=" card-header text-center ">
        <h5>Tarea</h5>
    </div>
    <div class=" card-body ">
        <dl class="row">
            <dt class="col-sm-2 text-center text-dark">
                @Html.DisplayNameFor(model => model.Orden)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Orden)
            </dd>
            
            <dt class="col-sm-2 text-center text-dark">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>

            <dt class="col-sm-2 text-center text-dark">
                @Html.DisplayNameFor(model => model.Estado)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Estado)
            </dd>

        </dl>
    </div>
    <div class=" card-footer text-center">
        <a asp-action="Index" class=" btn btn-outline-success btn-sm">volver a la lista</a>
    </div>
</div>

